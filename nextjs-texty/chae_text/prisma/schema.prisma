generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


// inventory_items 테이블 모델 정의
model inventory_items {
  id          String    @id
  name        String
  description String?
  visible     Boolean   @default(false)
}

model tbl_quest {
  seq Int @id @default(autoincrement())
  question String
  answer1 String
  answer2 String
  answer3 String
}